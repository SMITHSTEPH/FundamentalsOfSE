@model WebApplication2.Models.Account
<!DOCTYPE html>
<html>
<head>
    <title>@{ViewBag.Title = "ForgotPassword";}</title>
    <link rel="stylesheet" type="text/css" href="~/Content/SignupStyle.css">
</head>
<body>
    <h2>Forgot Password</h2><hr />

    <div align="center">
        @using (Html.BeginForm("SendForgotEmail", "Account", FormMethod.Post))
        {
            <br /><br />
            <div class="outer">
                <div>
                    @Html.Label("Input Username to send to:", new { @class = "signup_label" })
                </div>
                <div>
                    @Html.TextBoxFor(model => model.UserName, "UserName", new { @class = "textbox" })
                </div>
            </div>
            if (Convert.ToString(ViewData["UserName"]) == "Fail")
            {
                <br />
                @Html.Label("Wrong Username or Email and Rank combination, Couldn't Find user in database")
            }
            <br /><br />
            @Html.Label("OR", new { @id = "or" })<br />
            <div class="outer">
                <div>
                    @Html.Label("Input Email to send to:", new { @class = "signup_label" })
                </div>
                <div>
                    @Html.TextBoxFor(model => model.Email, "Email", new { @class = "textbox" })
                </div>
            </div>
            <br />
            if (Convert.ToString(ViewData["Rank"]) == "Fail")
            {
                @Html.Label("Wrong rank, please input one of the three acceptable inputs", new {@class="warning"})
                <br />
            }
            <br />
            <div class="outer">
                <div>
                    @Html.Label("Input your Role: (Member, admin or leader) ", new { @class = "signup_label" })
                </div>
                <div>
                    @Html.TextBoxFor(model => model.Rank, "Rank", new { @class = "textbox" })
                </div>
            </div>
            <br /><br />
            <input type="submit" value="Change Password" class="button btn-primary">
        }
    </div>
    <div align="center">
        @using (Html.BeginForm("Index", "Account"))
        {
            <br /><input type="submit" value="Return to Login" class="button btn-primary">
        }
    </div>
</body>
</html>



