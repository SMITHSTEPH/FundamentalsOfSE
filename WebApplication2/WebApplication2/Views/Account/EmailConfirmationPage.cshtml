@model WebApplication2.Models.Account

<head>
    <title>@{ViewBag.Title = "EmailConfirmationPage";}</title>
    <link rel="stylesheet" type="text/css" href="~/Content/SignupStyle.css">
</head>


<h2>Email Confirmation Sent</h2><hr />
<div class="email_form" align="center">
    @using (Html.BeginForm("Resend", "Account", FormMethod.Post))
    {
        <br />
        if (Convert.ToString(ViewData["Email"]) == "Sent")
        {
            @Html.Label("Please check email to confirm this account!")
        }
        else
        {
            @Html.Label("Error in sending Email, Please enter Username and Password to Resend", new { @class = "warning" })
            <br /><br />
            <div class="outer">
                <div>
                    @Html.Label("Username:", new { @class = "signup_label" })
                </div>
                <div>
                    @Html.TextBoxFor(model => model.UserName, "Username", new { @class = "textbox" })
                </div>
            </div>
            <br /><br />
            <div class="outer">
                <div>
                    @Html.Label("Password:", new { @class = "signup_label" })
                </div>
                <div>
                    @Html.PasswordFor(model => model.Password, "Password")
                </div>
            </div>
            <br /><br />
            <input type="submit" value="Resend" class="btn-primary button">
        }
    }
</div>
<div align="center">
    @using (Html.BeginForm("Index", "Account", FormMethod.Get))
    {
        <br /><br />
        <input type="submit" value="Return to Login" class="btn-primary button">
    }
</div>