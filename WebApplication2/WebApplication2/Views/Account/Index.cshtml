@model WebApplication2.Models.Account

@{
    ViewBag.Title = "Index";
}

<h2>Software Process Planner</h2>

@using (Html.BeginForm("SignIn", "Account"))
{
    <br/>
    <br/>
    @Html.Label("Username:");
    @Html.TextBox("Username");
    <br/>
    <br/>
    @Html.Label("Password:");
    @Html.Password("Password");
   <br/>
   <br/>
   <input type="submit" value="Sign In">
    if (!Convert.ToBoolean(ViewData["isValid"]))
    {
        System.Diagnostics.Debug.Print("In if statement");
        @Html.Label("Invalid username of password");
        <br/>        
        @Html.Label("Please try again");
    }
}
@{      
        List<SelectListItem> dropDown = new List<SelectListItem>();
        dropDown.Add(new SelectListItem{ Value = "SignUpMember", Text = "Team Member"});
        dropDown.Add(new SelectListItem{ Value = "SignUpLeader", Text = "Team Leader"});
        dropDown.Add(new SelectListItem{ Value = "SignUpAdmin", Text = "Team Administrator"});
}
@using (Html.BeginForm("SignUp", "Account"))
{
    <br/>
    <br/>
    @Html.Label("Not a member?");
    <br/>
    <br/>
    @Html.DropDownList("DropChoice", new SelectList(dropDown, "Value", "Text"))
    <input type="submit" value="Sign Up">
}



