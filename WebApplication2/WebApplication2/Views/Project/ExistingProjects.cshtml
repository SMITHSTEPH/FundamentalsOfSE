@model WebApplication2.Models.Project
<!DOCTYPE html>
<html>
<head>
    <title>@{ViewBag.Title = "ExistingProjects";}</title>
            @{Layout = "~/Views/Shared/_Layout.cshtml";}
</head>
<body>

    <h2>ExistingProjects</h2>
    <div>
        @using (Html.BeginForm("PasstoAdd", "Project", FormMethod.Post))
        {
            @Html.Label("Welcome: ")
            @Html.DisplayFor(Model => Model.UserName)
            @Html.HiddenFor(Model => Model.UserName)
            <br />
            @Html.Label("Your have the Rank: ")
            @Html.DisplayFor(Model => Model.Rank)
            @Html.HiddenFor(Model => Model.Rank)
            <br />

            if (Model.ProjectId[0] == 0)
            {
                @Html.Label("Not in any Projects")
            }
            else
            {
                var col = Model.ProjectId.Zip(Model.ProjectProcess, (x, y) => new { X = x, Y = y });

                foreach (var entity in col)
                {
                    
                    @Html.Label("Your in Project number is " + entity.X + ", which has the chosen process: " + entity.Y)
                    <br />
                }

            }

            if (Model.Rank == "Leader" || Model.Rank == "Admin")
            {
                <br />
                @Html.Label("If you want to add other people to Projects")
                <br />
                @Html.ActionLink("Add New Projet", "PasstoAdd", "WORK")
                <br />
                <input type="submit" value="Add New Project">      
            }
        }
        </div>
</body>
</html>

