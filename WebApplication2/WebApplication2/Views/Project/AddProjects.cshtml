@model WebApplication2.Models.Project
<!DOCTYPE html>
<html>
<head>
    <title>@{ViewBag.Title = "AddProjects";}</title>
    @{Layout = "~/Views/Shared/_Layout.cshtml";}
</head>
<body>

    <h2>AddProjects</h2>

    <div>
        @if (Model != null)
        {
            if (Model.ProjectId[0] == 0)
            {
                @Html.Label("Not in any Projects")
            }
            else
            {
                @Html.Label("User: " + Model.UserName)
                <br />

                var col = Model.ProjectId.Zip(Model.ProjectProcess, (x, y) => new { X = x, Y = y });

                foreach (var entity in col)
                {
                    @Html.Label("Select Project: number " + entity.X + " which has the chosen process: " + entity.Y);
                    <br />
                    @Html.Label("Click here to add project")
                    <br />
                }
            }
        }


    </div>
</body>
</html>

